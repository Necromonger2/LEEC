<Window x:Class="LEEC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LEEC Updater" Height="200" Width="400"
        WindowStyle="None"
        AllowsTransparency="False"
        Background="Transparent"
        WindowState="Maximized"
        ResizeMode="NoResize">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock x:Name="CurrentVersionTextBlock" FontSize="16" Margin="0,0,0,10"/>
            <TextBlock x:Name="RemoteVersionTextBlock" FontSize="16" Margin="0,0,0,10"/>
            <TextBlock x:Name="StatusTextBlock" FontSize="14" Margin="0,0,0,10"/>
            <ProgressBar x:Name="LoadingProgressBar" Height="20" IsIndeterminate="True" Visibility="Visible" />
        </StackPanel>
    </Grid>
</Window>