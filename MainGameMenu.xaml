<Window x:Class="LEEC.MainGameMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Main Game Menu" 
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Background="#FF2D2D30">
    <Grid>
        <!-- Buttons in the Top-Right Corner -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0">
            <Button x:Name="UserDetailsButton" Content="User Details" Width="100" Height="40" Background="#FF007ACC" Foreground="White" Margin="0,0,10,0" Click="UserDetailsButton_Click"/>
            <Button x:Name="LogoutButton" Content="Logout" Width="100" Height="40" Background="#FF007ACC" Foreground="White" Click="LogoutButton_Click"/>
        </StackPanel>

        <!-- Add other UI elements for the main game menu here -->
        <TextBlock Text="Welcome to the Main Game Menu!" FontSize="32" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>