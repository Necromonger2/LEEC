<Window x:Class="LEEC.UserDetailsForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Details" 
        WindowStyle="None"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Background="#FF2D2D30">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="User Profile" FontSize="32" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Display Name -->
            <TextBlock Text="Display Name" Foreground="White" Margin="0,0,0,5"/>
            <TextBox x:Name="DisplayNameTextBox" Width="300" Height="40" Margin="0,0,0,10" Background="#FF3C3F43" Foreground="White" BorderBrush="#FF4B4E54" BorderThickness="1"/>

            <!-- Save Button -->
            <Button Content="Save Changes" Width="300" Height="40" Background="#FF007ACC" Foreground="White" Click="SaveChangesButton_Click"/>

            <!-- Status Message -->
            <TextBlock x:Name="StatusMessageText" Foreground="White" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" TextAlignment="Center"/>

            <!-- Back to Main Menu -->
            <Button Content="Back to Main Menu" Width="300" Height="40" Background="Transparent" Foreground="#FF007ACC" BorderBrush="Transparent" Click="BackToMainMenuButton_Click" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>