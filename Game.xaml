<Window x:Class="LEEC.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LEEC"
        mc:Ignorable="d"
        Title="Game"
        WindowStyle="None"
        AllowsTransparency="False"
        Background="Transparent"
        WindowState="Maximized"
        ResizeMode="NoResize"
        KeyDown="Window_KeyDown">

    <Grid Background="#FF2D2D30">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Login" FontSize="32" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Username TextBox with placeholder -->
            <Grid>
                <TextBox x:Name="UsernameTextBox" Width="300" Height="40" Margin="0,0,0,10" Background="#FF3C3F43" Foreground="White" BorderBrush="#FF4B4E54" BorderThickness="1" GotFocus="UsernameTextBox_GotFocus" LostFocus="UsernameTextBox_LostFocus"/>
                <TextBlock x:Name="UsernamePlaceholder" Text="username" Foreground="Gray" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" IsHitTestVisible="False"/>
            </Grid>

            <!-- PasswordBox with placeholder -->
            <Grid>
                <PasswordBox x:Name="PasswordBox" Width="300" Height="40" Margin="0,0,0,20" Background="#FF3C3F43" Foreground="White" BorderBrush="#FF4B4E54" BorderThickness="1" GotFocus="PasswordBox_GotFocus" LostFocus="PasswordBox_LostFocus"/>
                <TextBlock x:Name="PasswordPlaceholder" Text="password" Foreground="Gray" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" IsHitTestVisible="False"/>
            </Grid>

            <Button Content="Login" Width="300" Height="40" Background="#FF007ACC" Foreground="White" Click="LoginButton_Click"/>

            <TextBlock Text="or Register" FontSize="32" Foreground="White" HorizontalAlignment="Center" Margin="0,20,0,10"/>
            <Button Content="Register" Width="300" Height="40" Background="#FF007ACC" Foreground="White" Click="RegisterButton_Click"/>

            <!-- Forgot Password Button -->
            <Button Content="Forgot Password?" Width="300" Height="40" Background="Transparent" Foreground="#FF007ACC" BorderBrush="Transparent" Click="ForgotPasswordButton_Click" Margin="0,10,0,0"/>

            <!-- Message TextBlock for displaying status messages -->
            <TextBlock x:Name="MessageTextBlock" Foreground="White" HorizontalAlignment="Center" Margin="0,20,0,0" TextWrapping="Wrap" TextAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>