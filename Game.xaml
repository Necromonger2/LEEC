<Window x:Class="LEEC.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LEEC"
        mc:Ignorable="d"
        Title="Game"
        WindowStyle="None"
        AllowsTransparency="False"
        Background="Transparent"
        WindowState="Maximized"
        ResizeMode="NoResize"
        KeyDown="Window_KeyDown">

    <Grid Background="#FF2D2D30">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Login" FontSize="32" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBox x:Name="UsernameTextBox" Width="300" Height="40" Margin="0,0,0,10" Background="#FF3C3F43" Foreground="White" BorderBrush="#FF4B4E54" BorderThickness="1" />
            <PasswordBox x:Name="PasswordBox" Width="300" Height="40" Margin="0,0,0,20" Background="#FF3C3F43" Foreground="White" BorderBrush="#FF4B4E54" BorderThickness="1"/>
            <Button Content="Login" Width="300" Height="40" Background="#FF007ACC" Foreground="White" Click="LoginButton_Click"/>
        </StackPanel>
    </Grid>
</Window>